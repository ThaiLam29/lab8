<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".dangky">


    <TextView
        android:text="Đăng Ký"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtname_Signi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:padding="5dp"
        android:hint="Nhập tên đăng nhập" />
    <TextView
        android:text="PassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtpass_signin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:padding="5dp"
        android:hint="Nhập password"/>
    <TextView
        android:text="Comfirm PassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtnhaplai_signin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:padding="5dp"
        android:hint="Nhập lạo password"/>

    <Button
        android:id="@+id/btndangky_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#2196F3"
        android:text="Đăng Ký"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>